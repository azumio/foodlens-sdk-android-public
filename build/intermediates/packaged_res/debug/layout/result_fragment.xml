<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <com.azumio.android.foodlenslibrary.views.ImageContainerLayout
        android:id="@+id/image_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:layout_marginBottom="@dimen/result_container_bottom_margin">

        <ImageView
            android:id="@+id/food_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="false"

            android:scaleType="centerCrop"></ImageView>


    </com.azumio.android.foodlenslibrary.views.ImageContainerLayout>

    <include
        layout="@layout/result_bottom_sheet"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior" />
    />

    <LinearLayout
        android:id="@+id/save_button_container"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:orientation="horizontal"
        android:padding="25dp"
        android:background="@color/white_80_alpha"
        android:layout_height="@dimen/result_bottom_sheet_loading_peek_height">
        <Button
            android:id="@+id/add_more_button"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:textColor="@color/white"
            android:text="@string/add_more"
            android:background="@drawable/dialogue_done_button"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"></Button>
        <Button
            android:id="@+id/save_meal_button"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:textColor="@color/white"
            android:text="@string/save_meal"
            android:layout_marginLeft="10dp"
            android:background="@drawable/dialogue_done_button"
            android:layout_height="wrap_content"></Button>


    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>