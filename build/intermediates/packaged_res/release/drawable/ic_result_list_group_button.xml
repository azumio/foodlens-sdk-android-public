<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="16dp" />

            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="@color/result_list_header_item_gradient_start_color"
                android:endColor="@color/result_list_header_item_gradient_end_color" />

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="@color/result_list_header_item_text_color" />
        </shape>
    </item>
</selector>