<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ViewPagerTabView">
        <attr name="indicator_color" format="color" />
        <attr name="indicator_height" format="dimension" />
        <attr name="tab_text_color" format="color" />
        <attr name="tab_text_size" format="dimension" />
        <attr name="text_all_caps" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CenteredCustomFontView">
        <attr name="android:checked" />
        <attr name="android:clickable" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:text" />
        <attr name="textChecked" format="string" />
        <attr name="fontPath" format="string" />
        <attr name="fontPathChecked" format="string" />
        <attr name="android:layout_width" />
        <attr name="android:layout_height" />
        <attr name="android:textAlignment" />
        <attr name="argusIconMapKey" format="string" />
    </declare-styleable>

    <declare-styleable name="XMLCustomTypefaceTextView" parent="@android:style/TextView">
        <attr name="typeface" format="string" />
    </declare-styleable>

    <declare-styleable name="XMLCustomTypefaceButton" parent="@android:style/Button">
        <attr name="typeface" />
    </declare-styleable>

    <declare-styleable name="XMLCustomTypefaceToggleButton" parent="@android:style/ToggleButton">
        <attr name="typeface" />
    </declare-styleable>

    <declare-styleable name="Checkable">
        <attr name="android:checked" />
        <attr name="android:clickable" />
    </declare-styleable>
    <declare-styleable name="CheckablesGroup">
        <attr name="android:checkedButton" />
        <attr name="android:orientation" />
        <attr name="nestedCheckables" format="boolean" />
    </declare-styleable>

    <declare-styleable name="FloatingActionButton">
        <attr name="fab_icon" format="reference" />
        <attr name="fab_icon_color" format="color" />
        <attr name="fab_icon_color_pressed" format="color" />
        <attr name="fab_icon_rotate_angle" format="integer" />
        <attr name="fab_icon_scale" format="float" />
        <attr name="fab_background_color" format="color" />
        <attr name="fab_background_color_pressed" format="color" />
    </declare-styleable>

    <declare-styleable name="CheckableTextWithIcon">
        <attr name="custom_text" format="reference" />
    </declare-styleable>

    <attr name="statusBarColor" format="color" />
    <attr name="toolbarColor" format="color" />
    <attr name="toolbarNormalColor" format="color" />
    <attr name="toolbarActiveColor" format="color" />

    <declare-styleable name="SimpleAmountView">
        <attr name="simpleCoinIconSize" format="dimension" />
        <attr name="simpleAmountTextSize" format="dimension" />
        <attr name="simplePrefixTextSize" format="dimension" />
        <attr name="coinColor" format="color" />
        <attr name="amountColor" format="color" />
        <attr name="prefixColor" format="color" />
        <attr name="amountTypeface" format="string" />
        <attr name="amountText" format="string" />
        <attr name="iconNameArgus" format="string" />
    </declare-styleable>

    <declare-styleable name="CircleProgress">
        <attr name="fromColor" format="color" />
        <attr name="toColor" format="color" />
        <attr name="upperTextSize" format="dimension" />
        <attr name="lowerTextSize" format="dimension" />
        <attr name="thicknessFraction" format="integer" />
    </declare-styleable>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>


    <declare-styleable name="TextBubbleWidget" parent="XMLCustomTypefaceTextView">
        <attr name="bubbleText" format="string" />
        <attr name="bubbleSubText" format="string" />
        <attr name="showTopArrow" format="boolean" />
        <attr name="showBottomArrow" format="boolean" />
        <attr name="showNext" format="boolean" />
        <attr name="nextButtonText" format="string" />
        <attr name="textVisibility">
            <enum name="gone" value="2" />
            <enum name="invisible" value="1" />
            <enum name="visible" value="0" />
        </attr>
        <attr name="bottomArrowPosition" format="enum">
            <enum name="right" value="2" />
            <enum name="center" value="1" />
        </attr>
    </declare-styleable>
</resources>
