<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FoodLensViewPagerTabView">
        <attr name="foodlens_indicator_color" format="color" />
        <attr name="foodlens_indicator_height" format="dimension" />
        <attr name="foodlens_tab_text_color" format="color" />
        <attr name="foodlens_tab_text_size" format="dimension" />
        <attr name="foodlens_text_all_caps" format="boolean" />
    </declare-styleable>

    <declare-styleable name="FoodLensCenteredCustomFontView">
        <attr name="android:checked" />
        <attr name="android:clickable" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:text" />
        <attr name="foodlens_textChecked" format="string" />
        <attr name="foodlens_fontPath" format="string" />
        <attr name="foodlens_fontPathChecked" format="string" />
        <attr name="android:layout_width" />
        <attr name="android:layout_height" />
        <attr name="android:textAlignment" />
        <attr name="foodlens_argusIconMapKey" format="string" />
    </declare-styleable>

    <declare-styleable name="FoodLensXMLCustomTypefaceTextView" parent="@android:style/TextView">
        <attr name="foodlens_typeface" format="string" />
    </declare-styleable>

    <declare-styleable name="FoodLensXMLCustomTypefaceButton" parent="@android:style/Button">
        <attr name="foodlens_typeface" />
    </declare-styleable>

    <declare-styleable name="FoodLensXMLCustomTypefaceToggleButton" parent="@android:style/ToggleButton">
        <attr name="foodlens_typeface" />
    </declare-styleable>

    <declare-styleable name="FoodLensCheckable">
        <attr name="android:checked" />
        <attr name="android:clickable" />
    </declare-styleable>
    <declare-styleable name="FoodLensCheckablesGroup">
        <attr name="android:checkedButton" />
        <attr name="android:orientation" />
        <attr name="foodlens_nestedCheckables" format="boolean" />
    </declare-styleable>

    <declare-styleable name="FoodLensFloatingActionButton">
        <attr name="foodlens_fab_icon" format="reference" />
        <attr name="foodlens_fab_icon_color" format="color" />
        <attr name="foodlens_fab_icon_color_pressed" format="color" />
        <attr name="foodlens_fab_icon_rotate_angle" format="integer" />
        <attr name="foodlens_fab_icon_scale" format="float" />
        <attr name="foodlens_fab_background_color" format="color" />
        <attr name="foodlens_fab_background_color_pressed" format="color" />
    </declare-styleable>

    <declare-styleable name="FoodLensCheckableTextWithIcon">
        <attr name="foodlens_custom_text" format="reference" />
    </declare-styleable>

    <attr name="foodlens_statusBarColor" format="color" />
    <attr name="foodlens_toolbarColor" format="color" />
    <attr name="foodlens_toolbarNormalColor" format="color" />
    <attr name="foodlens_toolbarActiveColor" format="color" />

    <declare-styleable name="FoodLensSimpleAmountView">
        <attr name="foodlens_simpleCoinIconSize" format="dimension" />
        <attr name="foodlens_simpleAmountTextSize" format="dimension" />
        <attr name="foodlens_simplePrefixTextSize" format="dimension" />
        <attr name="foodlens_coinColor" format="color" />
        <attr name="foodlens_amountColor" format="color" />
        <attr name="foodlens_prefixColor" format="color" />
        <attr name="foodlens_amountTypeface" format="string" />
        <attr name="foodlens_amountText" format="string" />
        <attr name="foodlens_iconNameArgus" format="string" />
    </declare-styleable>

    <declare-styleable name="FoodLensCircleProgress">
        <attr name="foodlens_fromColor" format="color" />
        <attr name="foodlens_toColor" format="color" />
        <attr name="foodlens_upperTextSize" format="dimension" />
        <attr name="foodlens_lowerTextSize" format="dimension" />
        <attr name="foodlens_thicknessFraction" format="integer" />
    </declare-styleable>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="FoodLensButtonBarContainerTheme">
        <attr name="foodlens_metaButtonBarStyle" format="reference" />
        <attr name="foodlens_metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>


    <declare-styleable name="FoodLensTextBubbleWidget" parent="FoodLensXMLCustomTypefaceTextView">
        <attr name="foodlens_bubbleText" format="string" />
        <attr name="foodlens_bubbleSubText" format="string" />
        <attr name="foodlens_showTopArrow" format="boolean" />
        <attr name="foodlens_showBottomArrow" format="boolean" />
        <attr name="foodlens_showNext" format="boolean" />
        <attr name="foodlens_nextButtonText" format="string" />
        <attr name="foodlens_textVisibility">
            <enum name="gone" value="2" />
            <enum name="invisible" value="1" />
            <enum name="visible" value="0" />
        </attr>
        <attr name="foodlens_bottomArrowPosition" format="enum">
            <enum name="right" value="2" />
            <enum name="center" value="1" />
        </attr>
    </declare-styleable>
</resources>
